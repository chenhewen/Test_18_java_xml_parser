<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_title_height"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:background="@color/menu_setting_title" >
    </FrameLayout>

    <include
        android:id="@+id/title_setting_about"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_title_height"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        layout="@layout/common_title_layout" />

    <ImageView
        android:id="@+id/icon_setting_about"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:src="@drawable/icon_about" />

    <TextView
        android:id="@+id/appname_setting_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/icon_setting_about"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:fontFamily="@string/font_families_roboto"
        android:text="@string/app_name"
        android:textColor="#757575"
        android:textSize="23dp" />

    <TextView
        android:id="@+id/versionName_setting_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/appname_setting_about"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
        android:fontFamily="@string/font_families_roboto_light"
        android:textColor="#858585"
        android:textSize="16dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="255dp" >

        <RelativeLayout
            android:id="@+id/facebook_setting_relativelayout"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="0dp"
            android:clickable="true" >

            <ImageView
                android:id="@+id/fackbook_setting_about"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:src="@drawable/facebook_setting_about" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@id/fackbook_setting_about"
                android:fontFamily="@string/font_families_roboto"
                android:text="@string/facebook_about_setting"
                android:textColor="#858585"
                android:textSize="15dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/googleplus_setting_relativelayout"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/facebook_setting_relativelayout"
            android:layout_marginLeft="0dp"
            android:clickable="true" >

            <ImageView
                android:id="@+id/googleplus_setting_about"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:src="@drawable/googleplus_setting_about" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@id/googleplus_setting_about"
                android:fontFamily="@string/font_families_roboto"
                android:text="@string/googleplus_about_setting"
                android:textColor="#858585"
                android:textSize="15dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/googleplay_setting_relativelayout"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/googleplus_setting_relativelayout"
            android:layout_marginLeft="0dp"
            android:clickable="true" >

            <ImageView
                android:id="@+id/googleplay_setting_about"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:src="@drawable/googleplay_setting_about" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@id/googleplay_setting_about"
                android:fontFamily="@string/font_families_roboto"
                android:text="@string/googleplay_about_setting"
                android:textColor="#858585"
                android:textSize="15dp" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/law_setting_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:paddingBottom="15dp" >

        <TextView
            android:id="@+id/law_two_setting_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/law_jump_setting_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/law_two_setting_about"
            android:text="@string/law_jump_setting_about"
            android:textSize="12sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/law_one_setting_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/law_setting_about"
        android:gravity="center"
        android:text="@string/law_one_setting_about"
        android:textSize="12sp" />

</RelativeLayout>