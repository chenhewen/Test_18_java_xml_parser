<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:gravity="center_vertical" >

    <ImageView
        android:id="@+id/icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:padding="7dp" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="7dp"
        android:textSize="@dimen/common_text_size_item_name"
        android:fontFamily="@string/font_families_roboto"
        android:layout_toLeftOf="@+id/button_container"
        android:layout_toRightOf="@+id/icon" />

    <ImageView
        android:id="@+id/divider"
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:background="#7b777777"
        android:layout_marginLeft="12dp"
        android:layout_toLeftOf="@+id/button_container"
        android:layout_marginBottom="10dp" />

    <LinearLayout
        android:id="@+id/button_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp" />
        
        <TextView 
            android:id="@+id/button_desc"
            android:textSize="11sp"
        	android:fontFamily="@string/font_families_roboto"
        	android:textColor="#85c443"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

</RelativeLayout>