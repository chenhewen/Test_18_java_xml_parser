<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/clean_list_group_height"
    android:background="@drawable/common_list_item_white_selector" >

    <ImageView
        android:id="@+id/clean_main_list_group_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/clean_list_common_horizontal_margin"
        android:contentDescription="@null" />

    <TextView
        android:id="@+id/clean_main_list_group_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/clean_list_common_content_horizontal_margin"
        android:ellipsize="middle"
        android:fontFamily="@string/font_families_roboto"
        android:maxLines="2"
        android:maxWidth="@dimen/clean_main_list_group_title_max_length"
        android:textColor="@color/common_module_name"
        android:textSize="@dimen/clean_list_common_text_size" />

    <com.gto.zero.zboost.view.GroupSelectBox
        android:id="@+id/clean_main_list_group_check"
        android:layout_width="56dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:focusable="false"
        android:paddingLeft="@dimen/clean_list_common_horizontal_margin"
        android:paddingRight="@dimen/clean_list_common_horizontal_margin"
        android:scaleType="fitCenter"
        android:visibility="gone" />

    <com.gto.zero.zboost.view.ProgressWheel
        android:id="@+id/clean_main_list_group_progress"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingRight="@dimen/clean_list_common_horizontal_margin"
        wheel:matProg_barColor="@color/common_green_normal"
        wheel:matProg_barWidth="2dp"
        wheel:matProg_progressIndeterminate="true" />

    <TextView
        android:id="@+id/clean_main_list_group_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/clean_list_common_content_horizontal_margin"
        android:fontFamily="@string/font_families_roboto"
        android:textColor="@color/clean_group_size_color"
        android:textSize="@dimen/clean_list_group_total_size_text_size" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/common_listview_divider" />

</RelativeLayout>