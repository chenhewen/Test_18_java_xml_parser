<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/tab_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:ellipsize="end"
        android:maxWidth="150dp"
        android:fontFamily="@string/font_families_roboto"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/boost_main_act_tab_running"
        android:textColor="#FFFFFFFF"
        android:textSize="@dimen/common_tab_title_text_size"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/tab_title_tips_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tab_title_text_view"
        android:layout_marginLeft="4dp"
        android:layout_toRightOf="@id/tab_title_text_view"
        android:ellipsize="end"
        android:fontFamily="@string/font_families_roboto"
        android:gravity="center"
        android:singleLine="true"
        android:background="@drawable/common_new_flag_text_tips_bg"
        android:text="25"
        android:textColor="#FFCA5C58"
        android:textSize="@dimen/common_tab_title_text_size"
        android:textStyle="normal" />

</RelativeLayout>