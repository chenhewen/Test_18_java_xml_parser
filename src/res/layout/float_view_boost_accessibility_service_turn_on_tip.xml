<?xml version="1.0" encoding="utf-8"?>
<com.gto.zero.zboost.function.boost.accessibility.BoostAccessibilityServiceEnableFloatViewLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/boost_accessibility_serviceenable_floatview_layout"
        android:layout_width="@dimen/float_view_boost_accessibility_service_tips_layout_size"
        android:layout_height="@dimen/float_view_boost_accessibility_service_tips_layout_size"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/float_view_boost_accessibility_service_tips_bg"
        android:orientation="vertical"
        android:padding="4dp" >

        <ImageView
            android:id="@+id/float_view_boost_accessibility_service_tips_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="62dp"
            android:contentDescription="@null"
            android:scaleType="centerInside"
            android:src="@drawable/enable_super_boost_guide_sketch" />

        <TextView
            android:id="@+id/float_view_boost_accessibility_service_tips_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/float_view_boost_accessibility_service_tips_img"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@string/font_families_roboto"
            android:gravity="center"
            android:text="@string/boost_turn_on_boost_accessibility_service_tip"
            android:textColor="@android:color/white"
            android:textSize="12dp"
            android:textStyle="normal" />

        <com.gto.zero.zboost.common.ui.ClickTransparentLayout
            android:id="@+id/float_view_boost_accessibility_service_tips_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                android:padding="4dp"
                android:scaleType="centerInside"
                android:src="@drawable/float_view_boost_accessibility_service_tips_close" />
        </com.gto.zero.zboost.common.ui.ClickTransparentLayout>
    </RelativeLayout>

</com.gto.zero.zboost.function.boost.accessibility.BoostAccessibilityServiceEnableFloatViewLayout>