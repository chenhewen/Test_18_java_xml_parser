<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/common_item_height" >

    <ImageView
        android:id="@+id/clean_main_list_item_icon"
        android:layout_width="@dimen/common_icon_width"
        android:layout_height="@dimen/common_icon_width"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/clean_list_common_horizontal_margin"
        android:contentDescription="@null" />

    <TextView
        android:id="@+id/clean_main_list_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/clean_list_item_title_margin_left"
        android:ellipsize="middle"
        android:fontFamily="@string/font_families_roboto"
        android:maxWidth="@dimen/clean_main_list_item_title_max_length"
        android:singleLine="true"
        android:textColor="#787878"
        android:textSize="@dimen/clean_list_group_total_size_text_size" />

    <com.gto.zero.zboost.view.ItemCheckBox
        android:id="@+id/clean_main_list_item_check"
        android:layout_width="56dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:focusable="false"
        android:paddingLeft="@dimen/clean_list_common_horizontal_margin"
        android:paddingRight="@dimen/clean_list_common_horizontal_margin"
        android:scaleType="fitCenter" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/clean_list_common_content_horizontal_margin"
        android:gravity="bottom"
        android:paddingBottom="1dp" >

        <TextView
            android:id="@+id/clean_main_list_item_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@string/font_families_roboto"
            android:textColor="#787878"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/clean_main_list_item_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="2dp"
            android:fontFamily="@string/font_families_roboto"
            android:textColor="#B5B5B5"
            android:textSize="11dp" />
    </LinearLayout>

</RelativeLayout>