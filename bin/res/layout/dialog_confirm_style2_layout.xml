<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/confirm_dialog_style2_message1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@string/font_families_roboto"
            android:textColor="@color/menu_setting_ok"
            android:textSize="15dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/confirm_dialog_style2_message2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@string/font_families_roboto"
            android:textColor="@color/menu_setting_ok"
            android:textSize="15dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/confirm_dialog_style2_message3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@string/font_families_roboto"
            android:textColor="@color/menu_setting_ok"
            android:textSize="15dp"
            android:visibility="gone" />
    </LinearLayout>

</ScrollView>